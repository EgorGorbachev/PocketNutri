<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/ingredientDetailsRecyclerItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredient_details_recycler_item_name"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:layout_marginVertical="@dimen/margin_10"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientDetailsRecyclerItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="@id/ingredientDetailsRecyclerItemName"
        app:layout_constraintStart_toEndOf="@id/ingredientDetailsRecyclerItemName"
        app:layout_constraintTop_toTopOf="@id/ingredientDetailsRecyclerItemName" />

    <TextView
        android:id="@+id/ingredientDetailsRecyclerItemPercentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredient_details_recycler_item_percent_title"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ingredientDetailsRecyclerItemName" />

    <TextView
        android:id="@+id/ingredientDetailsRecyclerItemPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/ingredientDetailsRecyclerItemPercentTitle"
        app:layout_constraintTop_toTopOf="@id/ingredientDetailsRecyclerItemPercentTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>